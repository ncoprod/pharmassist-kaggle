{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "pharmassist://contracts/patient_analysis_status.schema.json",
  "title": "Patient Analysis Status",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "patient_ref",
    "status",
    "changed_since_last_analysis",
    "message",
    "updated_at"
  ],
  "properties": {
    "schema_version": {
      "$ref": "pharmassist://contracts/_meta.schema.json#/$defs/schema_version"
    },
    "patient_ref": {
      "$ref": "pharmassist://contracts/_meta.schema.json#/$defs/non_empty_string"
    },
    "status": {
      "type": "string",
      "enum": ["up_to_date", "refresh_pending", "running", "failed"]
    },
    "changed_since_last_analysis": {
      "type": "boolean"
    },
    "latest_visit_ref": {
      "type": ["string", "null"],
      "maxLength": 200
    },
    "latest_visit_at": {
      "type": ["string", "null"],
      "maxLength": 100
    },
    "latest_run_id": {
      "type": ["string", "null"],
      "maxLength": 100
    },
    "latest_run_status": {
      "type": ["string", "null"],
      "maxLength": 100
    },
    "latest_run_at": {
      "type": ["string", "null"],
      "maxLength": 100
    },
    "last_error": {
      "type": ["string", "null"],
      "maxLength": 300
    },
    "message": {
      "type": "string",
      "maxLength": 500
    },
    "updated_at": {
      "$ref": "pharmassist://contracts/_meta.schema.json#/$defs/iso_datetime"
    }
  }
}
